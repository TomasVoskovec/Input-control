<Window x:Class="Input_control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Input_control"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBox x:Name="firstNameInput" Height="50" Margin="25" FontSize="30" VerticalContentAlignment="Center">First Name</TextBox>
            <TextBox x:Name="lastNameInput" Height="50" Margin="25" FontSize="30" VerticalContentAlignment="Center">Last Name</TextBox>
            <DatePicker x:Name="dateInput" Height="50" Margin="25" FontSize="30" VerticalContentAlignment="Center"></DatePicker>
        </StackPanel>

        <Button Grid.Row="2" Grid.Column="1" Margin="5" Width="200" Content="Register" FontSize="25" Click="register_click"></Button>

    </Grid>
</Window>
